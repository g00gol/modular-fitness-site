<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"></script>

{{#> module moduleName="Blood Sugar Tracker"}}

   {{#> panels/panel-1}}
    <h2>Blood Sugar Tracker</h2>
    <form action = '/modules/sugar' method="POST" id = "sugarTrackerForm">
      <label>
       Sugar Reading
        <input name="sugarInput" type="number" id = "sugarInput">
      </label>
      <label>
        Fasting status
        <input name="fastingInput" id= "fastingInput" type="checkbox" value="true">
      </label>
      <button type="submit">Submit</button>
    </form>
    <p id = "sugarError"></p>
     
  {{/panels/panel-1}}

  {{#> panels/panel-2}}
    <h2>Your last sugar reading</h2>
    <p id = "lastSugar"></p>

  {{/panels/panel-2}}
<script src = "../../../public/js/modules/sugar.js"></script>


{{/module}} 

