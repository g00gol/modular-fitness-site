{{log this}}

<section class="userFormContainer" id="login-container">
  <form class="userForm" id="login-form" action="/login" method="POST">
    <label for="usernameInput"></label>
    <input
      id="usernameInput"
      class="{{#ifContains invalid "usernameInput"}}invalidInput{{/ifContains}}"
      name="usernameInput"
      type="text"
      placeholder="Username"
    />

    <label for="passwordInput"></label>
    <input
      id="passwordInput"
      class="{{#ifContains invalid "passwordInput"}}invalidInput{{/ifContains}}"
      name="passwordInput"
      type="password"
      placeholder="Password"
    />
    <input type="submit" />
  </form>

  <div class="errorContainer">
    {{#each error}}
      <p class="error">{{this}}</p>
    {{/each}}
  </div>
  <a href="/signup">Click here to sign up!</a>

</section>